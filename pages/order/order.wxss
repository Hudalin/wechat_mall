.weui-pull {
  transition: all 0.3s;
  transform: translate3d(0px, -40px, 0px);
}

/*顶部导航栏*/
.top-nav {
  width: 750rpx;
  position: fixed;
  top: 0;
  z-index: 1;
}

.top-nav-bar {
  display: flex;
  justify-content: space-around;
  font-size: 13px;
  padding: 10px 0;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
}

.top-nav-bar .active {
  /*border-bottom: 2px solid #09bb07;*/
  border-bottom: 2px solid #F0145A;
  color: #F0145A;
}

.ma-top-190 {
  margin-top: 190rpx;
}

.operate {
  text-align: right;
  border-top: 1px solid #f0f0f0;
  padding-top: 10rpx;
}

.operate .operate-item {
  font-size: 12px;
  color: #fff;
  padding: 14rpx 18rpx;
  background-color: #b6aaec;
  border-radius: 5px;
}

.operate .pay {
  margin-right: 30rpx;
}
