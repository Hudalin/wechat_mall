  color:red;
}
.area{
  width:150rpx;
  border:1rpx solid #939393;
}
button{
  width:92%;
  margin-top:30rpx;
}
.remind{
  padding-top: 6rpx;
  color:#e64340;
  font-size:20rpx;
}
.save{
  background-color: #FFC800;
  color:#fff;
}
.right{
  padding-left: 150rpx;
  width:75%;
