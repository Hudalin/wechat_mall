/* pages/mine/mine.wxss */

.mine-box {
  width: 100%;
  height: 100%;
  font-family: "Helvetica Neue", Arial, "PingFang SC", "Microsoft YaHei", sans-serif;
  display: flex;
  flex-direction: column;
}

.user {
  height: 500rpx;
  width: 100%;
}

.user-pic {
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user-name {
  display: flex;
  justify-content: center;
  align-items: center;
}

.user-text {
  display: flex;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: #f55030;
}
.login_icon{
  margin-left: 22px;
  width: 14px;
  height: 14px
}

.user-text text {
  display: flex;
  justify-content: center;
  width: 300rpx;
}

.user image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 130rpx;
}

.btn {
  flex: 1;
  width: 100%;
}

.btn image {
  height: 100rpx;
  width: 100rpx;
}

.btn ul {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.btn ul li {
  width: 30%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 14px;
}

.footer {
  height: 100%;
}

.footer button {
  width: 600rpx;
  margin: 0 auto;
}

label {
  display: flex;
  flex-direction: column;
}

label view {
  display: flex;
  margin-top: 20rpx;
}

label view input {
  flex: 1;
  border-bottom: 1px solid #aaa;
}
label view .login_btn{
  color: #aaa;
  height: 90rpx;
  font-size: 15px;
}
.login_box{
  width: 85%;
  margin: 0 auto;
}
.login_error{
  width:100%;
  display:flex;
  align-items:center;
  justify-content:center;
  color: #f55030;
}
.login_btn{
  width: 100%;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
}